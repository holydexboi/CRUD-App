<%- include ("partials/header") %>


<div class="container">
		<h1 style="text-align: center">EDIT <%= user.username %></h1>
		<form action="/<%= user._id%>?_method=PUT" method="POST">
			<div class="form-row"></div>
				<div class="form-group h3">
      				<label for="inputUsername">User name:</label>
     				<input class="form-control" type="text" name="user[username]" id="inputUsername" value="<%= user.username %>">
    			</div>
				<button type="submit" class="btn btn-primary btn-lg">Enter</button>

		</form>
	<a href="/">Go Home</a>
</div>
<%- include ("partials/footer") %>